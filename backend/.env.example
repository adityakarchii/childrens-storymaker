# Environment Variables for Gemini Storybook Application

# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/storybook

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Google APIs
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here
GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
GOOGLE_CLOUD_TTS_KEY_FILE=./config/google-cloud-key.json

# OpenAI (Alternative for image generation)
OPENAI_API_KEY=your-openai-api-key-here

# Cloudinary (for image storage)
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# External Image Generation APIs
STABILITY_AI_API_KEY=your-stability-ai-key
MIDJOURNEY_API_KEY=your-midjourney-key

# File Upload Settings
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000
